<div class="content-wrapper">
  <%- include('../partials/page_title'); %> <%- include('./create'); %> <%-
  include('./update'); %>
  <section class="content">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title mt-1"><b><%= title %> List</b></h3>
        <div class="card-tools pr-2">
          <a
            data-toggle="modal"
            data-target="#createTaxModal"
            href="#"
            class="btn btn-primary btn-sm"
          >
            <i class="fas fa-plus"></i> Add New <%= singleTitle %>
          </a>
        </div>
      </div>
      <!-- /.card-header -->
      <div class="card-body">
        <table
          id="taxList"
          class="table table-bordered table-sm table-striped"
        >
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Value</th>
              <th>Type</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% taxes.forEach(function(tax) { %>
            <tr>
              <td><%= tax.id %></td>
              <td><%= tax.name %></td>
              <td><%= tax.value %></td>
              <td><%= tax.type %></td>
              <td>
                <% var className = tax.status === 'active' ? 'success' : 'danger'; %>
                <a
                  href="#"
                  class="btn btn-<%= className %> btn-xs text-capitalize statusChange"
                  data-status="<%= tax.status %>"
                  data-id="<%= tax.id %>"
                  ><%= tax.status %></a
                >
              </td>
              <td>
                <a href="#" class="btn btn-info btn-xs">
                  <i class="fas fa-info-circle"></i> View
                </a>
                <a
                  class="btn updateTax btn-primary btn-xs"
                  data-id="<%= tax.id %>"
                >
                  <i class="fas fa-edit"></i> Edit
                </a>
                <a
                  href="#"
                  data-id="<%= tax.id %>"
                  class="deleteTax btn btn-danger btn-xs"
                >
                  <i class="fas fa-trash"></i> Delete
                </a>
              </td>
            </tr>
            <% }); %>
          </tbody>
          <tfoot>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Value</th>
              <th>Type</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </section>
</div>

<script>
  $(function () {
    // datatable code
    $("#taxList")
      .DataTable({
        responsive: true,
        lengthChange: false,
        autoWidth: false,
        order: false,
        pageLength: 10,
        lengthChange: true,
      })
      .buttons()
      .container();

    $(".statusChange").click(function () {
      const taxId = $(this).data("id");
      const currentStatus = $(this).data("status");
      const updateStatus = currentStatus == "active" ? "inactive" : "active";
      Swal.fire({
        title: "Are you sure?",
        text: `Want to change status ${currentStatus} to ${updateStatus}`,
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, change it!",
      }).then((result) => {
        if (result.isConfirmed) {
          // AJAX request to delete permission
          $.ajax({
            url: "<%= baseUrl %>tax/status/" + taxId,
            type: "PATCH",
            data: { status: updateStatus },
            success: function (response, textStatus, xhr) {
              if (xhr.status == 200) {
                Swal.fire({
                  title: "Status changed!",
                  text: "<%= singleTitle %> has been updated successfully.",
                  icon: "success",
                  timer: 1500,
                  showConfirmButton: false,
                }).then(() => {
                  location.reload();
                });
              } else {
                Swal.fire({
                  title: "Error!",
                  text: response.message || "Failed to update tax status.",
                  icon: "error",
                });
              }
            },
            error: function (xhr) {
              Swal.fire({
                title: "Error!",
                text:
                  xhr.responseJSON?.message ||
                  "An error occurred while updating the tax.",
                icon: "error",
              });
            },
          });
        }
      });
    });

    // Delete functionality with SweetAlert
    $(".deleteTax").click(function () {
      const taxId = $(this).data("id");
      Swal.fire({
        title: "Are you sure?",
        text: "You won't be able to revert this!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, delete it!",
      }).then((result) => {
        if (result.isConfirmed) {
          // AJAX request to delete permission
          $.ajax({
            url: "<%= baseUrl %>tax/delete/" + taxId,
            type: "DELETE",
            success: function (response, textStatus, xhr) {
              if (xhr.status == 200) {
                Swal.fire({
                  title: "Deleted!",
                  text: "<%= singleTitle %> has been deleted successfully.",
                  icon: "success",
                  timer: 1500,
                  showConfirmButton: false,
                }).then(() => {
                  location.reload();
                });
              } else {
                Swal.fire({
                  title: "Error!",
                  text: response.message || "Failed to delete item.",
                  icon: "error",
                });
              }
            },
            error: function (xhr) {
              Swal.fire({
                title: "Error!",
                text:
                  xhr.responseJSON?.message ||
                  "An error occurred while deleting the item.",
                icon: "error",
              });
            },
          });
        }
      });
    });

    // Update functionality with SweetAlert
    $(".updateTax").click(function () {
      const taxId = $(this).data("id");
      $.ajax({
        url: "<%= baseUrl %>tax/read/" + taxId,
        type: "GET",
        success: function (response) {
          const data = response.data;
          console.log(response);
          $("#updateTaxModal").modal("show");
          $("#updateTaxForm input[name=name]").val(data.name);
          $("#updateTaxForm input[name=value]").val(data.value);
          $("#updateTaxForm input[name=type]").val(data.type);
          $(".taxIdUpdate").text(data.id);

          $("#updateTaxForm").submit(function (event) {
            event.preventDefault();

            const formData = {
              name: $("#updateTaxForm input[name=name]").val(),
              value: $("#updateTaxForm input[name=value]").val(),
              type: $("#updateTaxForm input[name=type]").val(),
            };

            $.ajax({
              url: "<%= baseUrl %>tax/update/" + taxId,
              type: "PATCH",
              data: JSON.stringify(formData),
              contentType: "application/json",
              success: function (response, textStatus, xhr) {
                if (xhr.status == 200) {
                  Swal.fire({
                    title: "Success!",
                    text: response.message,
                    icon: "success",
                    confirmButtonText: "OK",
                  }).then((result) => {
                    if (result.isConfirmed) {
                      location.reload();
                    }
                  });
                }
              },
              error: function (xhr) {
                let errorMessage = "An error occurred while creating the role.";
                if (xhr.responseJSON && xhr.responseJSON.message) {
                  errorMessage = xhr.responseJSON.message;
                }
                Swal.fire({
                  title: "Error!",
                  text: errorMessage,
                  icon: "error",
                  confirmButtonText: "OK",
                });
              },
            });
          });
        },
        error: function (xhr) {
          console.error(xhr);
        },
      });
    });
  });
</script>
